{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,

		"baseUrl": "./",
		"paths": {
			"@/types/*": ["types/*"],

			"@/hooks/*": ["hooks/*"],
			"@/components/*": ["components/*"],
			"@/functions/*": ["functions/*"],
			"@/pages/*": ["pages/*"],
			"@/public/*": ["public/*"],
			"@/styles/*": ["styles/*"],

			"@/config/*": ["./pages/api/config/*"],
			"@/controllers/*": ["./pages/api/controllers/*"],
			"@/middlewares/*": ["./pages/api/middlewares/*"],
			"@/utils/*": ["pages/api/functions/*"],
			"@/api/*": ["./pages/api/*"],

			"@/*": ["*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
